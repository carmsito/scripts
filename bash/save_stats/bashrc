    . /etc/bash_completion
fi

# === FZF + Bash Enhancements (auto install script) ===
# --- FZF activation ---
# --- FZF activation ---
if [ -f ~/.fzf.bash ]; then
   source ~/.fzf.bash
fi

# --- Menu visuel TAB (faÃ§on Zsh) ---
if [ -n "$BASH_VERSION" ]; then
   bind 'set show-all-if-ambiguous on'
   bind 'set menu-complete-display-prefix on'
